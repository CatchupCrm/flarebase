{
  "name": "bottelet/flarepoint",
  "description": "Flarepoint is a free, open-source and self-hosted CRM platform based of Laravel 5",
  "keywords": [
    "laravel",
    "CRM",
    "customer management",
    "Lead management",
    "customer relationship management"
  ],
  "authors": [
    {
      "name": "Casper Bottelet",
      "email": "cbottelet@gmail.com"
    }
  ],
  "license": "MIT",
  "type": "project",
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.3.*",
    "laravelcollective/html": "5.3.x-dev",
    "yajra/laravel-datatables-oracle": "~6.0",
    "guzzlehttp/guzzle": "^6.2",
    "barryvdh/laravel-debugbar": "*",
    "barryvdh/laravel-ide-helper": "^2.2",
    "laravel/socialite": "~2.0",
    "pusher/pusher-php-server": "^2.3",
    "zizaco/entrust": "5.2.x-dev",
    "doctrine/dbal": "^2.5",
    "nwidart/laravel-modules": "^1.14",
    "igaster/laravel-theme": "~1"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "symfony/css-selector": "3.1.*",
    "symfony/dom-crawler": "3.1.*"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "Modules/"
    }
  },
  "autoload-dev": {
    "classmap": []
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "pre-update-cmd": [
      "php artisan clear-compiled"
    ],
    "post-update-cmd": [
      "php artisan optimize"
    ]
  }
}
